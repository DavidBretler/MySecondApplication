<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reletivelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carpic"
    tools:context=".UI.Login_Activity.LoginActivity">


    <LinearLayout

        android:id="@+id/layout_email_password"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/field_email"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/field_password"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:hint="password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_email_password"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="20sp"
            android:text="Sign_in" />

        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="20sp"
            android:text="Crate new account" />

    </LinearLayout>

    <TextView
        android:id="@+id/Txt_welcome"
        android:layout_width="325dp"
        android:layout_height="106dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="                      welcome !!
                                         you are in the  best app to find a ride or offer your company ride services"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Btn_verify_email"
        android:layout_width="157dp"
        android:layout_height="70dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="340dp"
        android:text="Send Email Verification" />

    <Button
        android:id="@+id/user_details"
        android:layout_width="181dp"
        android:layout_height="70dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="450dp"
        android:text="fill last user details" />


</RelativeLayout>