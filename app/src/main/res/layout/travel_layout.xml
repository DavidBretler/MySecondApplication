<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge">



    <TextView
        android:id="@+id/Txt_TravelDate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/Txt_ArrivalDate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/Txt_numPassenger"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="8sp"/>

<!--    <androidx.appcompat.widget.AppCompatSpinner-->
<!--        android:id="@+id/spinnerCompany"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="match_parent"-->
<!--        android:gravity="center_vertical"-->
<!--        android:textSize="8sp"/>-->

    <Button
        android:id="@+id/Btn_approveCompany"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="8sp"/>

    <Button
        android:id="@+id/Btn_changeToRun"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="8sp"/>

    <Button
        android:id="@+id/Btn_changeToClose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="8sp"/>

</RelativeLayout>